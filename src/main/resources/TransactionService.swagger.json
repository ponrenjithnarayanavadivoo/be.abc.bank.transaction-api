{
	"swagger": "2.0",
	"info": {
		"description": "This service is used to manage the transaction of the ABC Bank accounts",
		"version": "1.0.0",
		"title": "Bank Transaction Service API"
	},
	"host": "localhost:9083",
	"basePath": "/transaction/v1",
	"schemes": [
		"http"
	],
	"paths": {
		"/createTransaction": {
			"post": {
				"tags": [
					"createTransaction"
				],
				"description": "A new transaction will be created for the provided account Id",
				"operationId": "createTransaction",
				"consumes": [
					"application/json"
				],
				"produces": [
					"application/json"
				],
				"parameters": [
					{
						"$ref": "#/parameters/Authorization"
					},
					{
						"$ref": "#/parameters/Request-ID"
					},
					{
						"$ref": "#/parameters/Accept"
					},
					{
						"$ref": "#/parameters/Api-Version"
					},
					{
						"$ref": "#/parameters/Client-TimeStamp"
					},
					{
						"in": "body",
						"name": "TransactionRequestInfo",
						"description": "Transaction information",
						"required": true,
						"schema": {
							"$ref": "#/definitions/TransactionRequestInfo"
						}
					}
				],
				"responses": {
					"204": {
						"description": "Transaction created successfully"
					},
					"405": {
						"description": "Invalid input"
					},
					"500": {
						"description": "Invalid Server Error"
					}
				}
			}
		},
		"/getTransactionDetail/{accountIds}": {
			"get": {
				"tags": [
					"geTransactionDetail"
				],
				"summary": "Find the transactions by account ID",
				"description": "Get the transaction details",
				"operationId": "getTransactionDetails",
				"produces": [
					"application/json"
				],
				"parameters": [
					{
						"$ref": "#/parameters/Authorization"
					},
					{
						"$ref": "#/parameters/Request-ID"
					},
					{
						"$ref": "#/parameters/Accept"
					},
					{
						"$ref": "#/parameters/Api-Version"
					},
					{
						"$ref": "#/parameters/Client-TimeStamp"
					},
					{
						"name": "accountIds",
						"in": "path",
						"description": "customer account number",
						"required": true,
						"type": "array",
						"items": {
							"type": "string"
						},
						"minItems": 0
					}
				],
				"responses": {
					"200": {
						"description": "successful operation",
						"schema": {
							"$ref": "#/definitions/TransactionDetailsInfo"
						}
					},
					"400": {
						"description": "Invalid input"
					},
					"500": {
						"description": "Invalid Server Error"
					}
				}
			}
		}
	},
	"parameters": {
		"Authorization": {
			"name": "Authorization",
			"in": "header",
			"description": "for security",
			"type": "string"
		},
		"Request-ID": {
			"name": "Request-ID",
			"in": "header",
			"description": "It will be used a sort of correlation id for logging and tracking purposes.",
			"required": true,
			"type": "string"
		},
		"Accept": {
			"name": "Accept",
			"in": "header",
			"description": "It must be of type appliation/json.",
			"required": true,
			"type": "string"
		},
		"Api-Version": {
			"name": "Api-Version",
			"in": "header",
			"description": "Version of the API's definition.",
			"required": true,
			"type": "string"
		},
		"Client-TimeStamp": {
			"name": "Client-TimeStamp",
			"in": "header",
			"description": "TimeStamp in ISO8601 Format is ???.",
			"required": true,
			"type": "string",
			"format": "date-time"
		}
	},
	"definitions": {
		"TransactionDetailsInfo": {
			"properties": {
				"TransactionDetails": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/TransactionDetail"
					},
					"minItems": 0
				}
			}
		},
		"TransactionDetail": {
			"properties": {
				"transactionId": {
					"type": "string"
				},
				"amount": {
					"type": "integer",
					"format": "int64"
				},
				"transactionTimestamp": {
					"type": "string"
				},
				"accountNumber": {
					"type": "string"
				}
			}
		},
		"TransactionRequestInfo": {
			"properties": {
				"amount": {
					"type": "integer",
					"format": "int64"
				},
				"accountNumber": {
					"type": "integer",
					"format": "int64"
				}
			}
		}
	}
}